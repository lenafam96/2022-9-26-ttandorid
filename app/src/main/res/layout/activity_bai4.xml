<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".bai4">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What type of coffee?"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <RadioGroup
        android:id="@+id/raidoGroup_bai4_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/Decaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decaf"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/Expresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expresso"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/Colombian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colombian"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What else in you Coffee?"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/Cream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cream"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/Sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugar"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_bai4_pay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"/>
</LinearLayout>